{
  "name": "aging-inventory-marketing-suite",
  "version": "1.0.0",
  "description": "Marketing suite for auto dealers focused on aging inventory, attribution, and PVR impact.",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "desktop": "electron .",
    "dist:mac": "electron-builder --mac"
  },
  "keywords": [
    "automotive",
    "dealership",
    "inventory",
    "marketing",
    "pvr"
  ],
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.2",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "playwright": "^1.58.2"
  },
  "build": {
    "appId": "com.dealer.aginginventorysuite",
    "productName": "Aging Inventory Marketing Suite",
    "files": [
      "electron-main.js",
      "server.js",
      "public/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": [
        "dmg",
        "zip"
      ]
    }
  }
}
