{
  "name": "retirement-planner-web",
  "version": "1.0.0",
  "description": "Retirement planner website with year-by-year projection modeling.",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "desktop": "electron .",
    "dist:mac": "electron-builder --mac"
  },
  "keywords": [
    "retirement",
    "planner",
    "finance",
    "projection"
  ],
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "playwright": "^1.58.2"
  },
  "build": {
    "appId": "com.retirement.planner",
    "productName": "Retirement Planner",
    "files": [
      "electron-main.js",
      "server.js",
      "public/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg",
        "zip"
      ]
    }
  }
}
